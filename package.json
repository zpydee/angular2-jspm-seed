{
  "name": "systemjs-experiments",
  "version": "0.1.1",
  "description": "a seed project including jspm, systemjs, angular2 and karma",
  "license": "ISC",
  "main": "index.js",
  "scripts": {
    "postinstall": "npm run install:jspm",
    "install:jspm": "jspm install",
    "postinstall:jspm": "npm run install:typings",
    "install:typings": "typings install",
    "start": "npm run start:express",
    "start:express": "node index.js",
    "start:lite": "lite-server --server app",
    "test": "npm run test:client",
    "test:client": "karma start karma.conf.js"
  },
  "author": "zpydee <daveb@interactrdt.com>",
  "devDependencies": {
    "jasmine-core": "^2.4.1",
    "jspm": "^0.16.32",
    "karma": "^0.13.22",
    "karma-chrome-launcher": "^0.2.3",
    "karma-jasmine": "^0.3.8",
    "karma-jspm": "^2.1.0",
    "karma-spec-reporter": "0.0.25",
    "lite-server": "^2.1.0",
    "typings": "^0.7.12"
  },
  "dependencies": {
    "angular2": "^2.0.0-beta.13",
    "es6-promise": "^3.0.2",
    "es6-shim": "^0.33.3",
    "express": "^4.13.4",
    "path": "^0.12.7",
    "reflect-metadata": "0.1.2",
    "rxjs": "5.0.0-beta.0",
    "zone.js": "0.5.10"
  },
  "jspm": {
    "directories": {
      "baseURL": "app",
      "packages": "jspm_packages"
    },
    "configFile": "system.conf.js",
    "dependencies": {
      "angular2": "npm:angular2@^2.0.0-beta.13"
    },
    "devDependencies": {
      "babel": "npm:babel-core@^5.8.24",
      "babel-runtime": "npm:babel-runtime@^5.8.24",
      "core-js": "npm:core-js@^1.1.4",
      "ts": "github:frankwallis/plugin-typescript@^4.0.5",
      "typescript": "npm:typescript@^1.6.2"
    }
  }
}
